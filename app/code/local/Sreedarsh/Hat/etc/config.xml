                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sreedarsh_hat_setup>            
        </resources>-->
        
        <events>
            <customer_register_success>
                <observers>
                    <sreedarsh_hat_observer>
                    
                        <class>Sreedarsh_Hat_Model_Observer</class>
                        <method>groupPackage</method>
                    </sreedarsh_hat_observer>
                </observers>
            </customer_register_success>
            
            <customer_save_after>
                <observers>
                    <sreedarsh_hat_customer_observer>       
                        <class>Sreedarsh_Hat_Model_Observer</class>
                        <method>techCategory</method>
                    </sreedarsh_hat_customer_observer>
                </observers>
            </customer_save_after>                    
                                                                                                             
        </events>   
        
    </global>
    
    <frontend>
        <routers>
            <sreedarsh_hat>
                <use>standard</use>
                <args>
                    <module>Sreedarsh_Hat</module>
                    <frontName>hireme</frontName>
                </args>
            </sreedarsh_hat>
        </routers>
        
        
        
        <layout>
            <updates>
                <sreedarsh_hat>
                    <file>sreedarsh_hat.xml</file>
                </sreedarsh_hat>
            </updates>
        </layout>
        
    </frontend> 
  
  
