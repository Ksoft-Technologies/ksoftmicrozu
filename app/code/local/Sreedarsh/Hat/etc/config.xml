<config> 
    <modules>
        <Sreedarsh_Hat>
            <version>0.0.1</version>
        </Sreedarsh_Hat>
    </modules> 
    
    <global>   
            
       <resources>
            <sreedarsh_hat_setup>
                <setup>
                    <module>Sreedarsh_Hat</module>
                    <class>Sreedarsh_Hat_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sreedarsh_hat_setup>            
        </resources>
        
       <models>
            <sreedarsh_hat>
                <class>Sreedarsh_Hat_Model</class>
                <resourceModel>hat_resource</resourceModel>
            </sreedarsh_hat>
            <hat_resource>
                <class>Sreedarsh_Hat_Model_Resource</class>
                <entities>
                    <parent>
                        <table>hat_parent_category</table>
                    </parent>
                    <child>
                        <table>hat_child_category</table>
                    </child>              
                    <tech>
                        <table>hat_technician</table>
                    </tech>
                </entities>
            </hat_resource>
        </models> 

        <blocks>
            <sreedarsh_hat>
                <class>Sreedarsh_Hat_Block</class>
            </sreedarsh_hat>
        </blocks>
        
        <helpers>
            <sreedarsh_hat>
                <class>Sreedarsh_Hat_Helper</class>
            </sreedarsh_hat>
        </helpers>
        
        
<!--        <resources>
            <sreedarsh_hat_setup>
